<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- 定义模块分类 -->
        <record model="ir.module.category" id="module_category_dinner_manage">
            <field name="name">订餐管理</field>
            <field name="description">订餐管理</field>
            <field name="sequence">10</field>
        </record>

        <!-- 定义用户组 -->
        <record id="group_dinner_manager" model="res.groups">
            <field name="name">订餐管理员</field>
            <field name="category_id" ref="module_category_dinner_manage"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- 定义普通用户的权限规则 -->
        <record id="base_dinner_role" model="ir.rule">
            <field name="name">普通用户只能看自己的订餐记录</field>
            <field name="model_id" ref="model_dinner_book_pro"/> <!-- 假设你已经在某处定义了这个模型 -->
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- 定义管理员的权限规则 -->
        <record id="manager_dinner_role" model="ir.rule">
            <field name="name">管理员可见所有的订餐记录</field>
            <field name="model_id" ref="model_dinner_book_pro"/> <!-- 同上 -->
            <field name="domain_force">[('id', '!=', False)]</field> <!-- 使用更明确的条件 -->
            <field name="groups" eval="[(4, ref('group_dinner_manager'))]"/>
        </record>
    </data>
</odoo>